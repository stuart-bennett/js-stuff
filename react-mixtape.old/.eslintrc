{
    "env": {
        "browser": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "plugins": ["react", "flowtype"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Promise": true
    },
    "rules": {
        "flowtype/define-flow-type": 1,
        "no-console": 0
    }
}
